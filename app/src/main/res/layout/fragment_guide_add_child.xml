<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manual.GuideAddChild">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:text="1.b. Tracked User Profile"
                android:textAlignment="center"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_below="@id/textView16"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/guidestepaddchild" />

            <TextView
                android:id="@+id/tv_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/bold"
                android:textAlignment="center"
                android:text="Explanation"
                android:background="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_exp_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:text="this is tracked user profile here you can add or remove this user"
                android:layout_below="@id/tv_exp"/>

            <TextView
                android:id="@+id/tv_btn_exp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_exp_stats"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/bold"
                android:textAlignment="center"
                android:text="Step-step to add tracked user"
                android:background="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_btn_exp">

                <Button
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add this tracked user"
                    android:textAllCaps="false"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/tv_btn_exp_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. click this button to send request to tracked user"
                    android:layout_below="@id/imageView2"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_assignment_black_24dp"
                    android:text="Cancel Request For This tracked user"
                    android:textAllCaps="false"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_btn_exp_1"/>

                <TextView
                    android:id="@+id/tv_btn_exp_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. request send to tracked user tell him to accept or cancel request by clicking this button"
                    android:layout_below="@id/imageView3"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text="Remove this tracked User"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/tv_btn_exp_2"/>

                <TextView
                    android:id="@+id/tv_btn_exp_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3. you can now track this user location click this button to untrack this user"
                    android:layout_below="@id/imageView4"
                    android:textAlignment="center"/>
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>