<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountFragment">


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/setting_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Status"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/set_profile_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/setting_status"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile_image"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/colorPrimary"/>

    <TextView
        android:id="@+id/set_nomor_hp_ortu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/set_profile_image"
        android:drawableStart="@drawable/phone"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="+62"
        android:textSize="30sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/set_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="username"
        android:textAlignment="center"
        android:layout_below="@+id/set_nomor_hp_ortu"
        android:drawableStart="@drawable/ic_person_pin_black_24dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="30sp"
        android:background="@drawable/inputs"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        />


    <Button
        android:id="@+id/update_settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_user_name"
        android:text="Update User Name"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:background="@drawable/buttons"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="6dp"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        />

    <ImageView
        android:id="@+id/logout_from_acc_frag"
        android:layout_width="72dp"
        android:layout_height="78dp"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:src="@drawable/ic_power_settings_new_red_24dp" />

    <ImageView
        android:id="@+id/img_hapus_akun_ortu"
        android:layout_width="57dp"
        android:layout_height="69dp"
        android:clickable="true"
        android:src="@drawable/ic_delete_forever_black_24dp"
        />

</RelativeLayout>